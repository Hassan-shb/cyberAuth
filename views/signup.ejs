<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Signup Form</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
</head>
<body class="flex items-center justify-center h-screen bg-gray-200">
    <div class="bg-white p-6 rounded shadow-md w-full max-w-sm">
        <div class="p-2 text-gray-700 text-center font-lg font-bold">Sign Up Form</div>
        <form id="signupForm" action="/signup" method="post">
            <div>
                <label for="username" class="block text-sm font-medium text-gray-700">Username</label>
                <input type="text" id="username" name="username" class="mt-1 py-2 px-2 block w-full border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
            </div>
            <div class="mt-4">
                <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
                <input type="email" id="email" name="email" class="mt-1 block py-2 px-2 w-full border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
            </div>
            <div class="mt-4">
                <label for="password" class="block text-sm font-medium text-gray-700">Password</label>
                <input type="password" id="password" name="password" class="mt-1  py-2 px-2 block w-full border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" onkeyup="checkPasswordStrength()">
                <div id="password-strength" class="text-sm mt-1"></div>
            </div>
            <div class="g-recaptcha mt-4" data-sitekey="6LckXVopAAAAAAcZwMEgcg48LZGq_2AknWZEGTzr"></div>
            <div class="mt-6">
                <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Sign up</button>
            </div>
            <p class="pt-2">Already have an account? <a href="/login" class="text-blue-500">Log In</a></p>
        </form>
    </div>
    
    <script>
        function checkPasswordStrength() {
            var strength = document.getElementById('password-strength');
            var password = document.getElementById('password').value;
            if (password.length > 8) {
                strength.textContent = 'Your Password is Strong';
                strength.style.color = 'green';
            } else if (password.length > 5) {
                strength.textContent = 'Your Password is Medium';
                strength.style.color = 'orange';
            } else {
                strength.textContent = 'Your Password is Weak';
                strength.style.color = 'red';
            }
        }
    </script>
</body>
</html>
